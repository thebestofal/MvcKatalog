@model MvcProj.Models.Browar

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Browar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KrajPochodzenia" class="control-label"></label>
                <input asp-for="KrajPochodzenia" class="form-control" />
                <span asp-validation-for="KrajPochodzenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" class="btn btn-primary"><a asp-action="Index" style="color:white; text-decoration: none ">Powró do listy</a></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
